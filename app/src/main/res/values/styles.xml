<resources>
    <style name="BaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/cyan_900</item>
        <item name="colorAccent">@color/blue_grey_500</item>
        <item name="android:windowBackground">@drawable/bg_main</item>
    </style>
    <style name="AppTheme" parent="BaseTheme" />
    <!-- Posts -->
    <style name="AppTheme.Post" />
    <style name="AppTheme.Post.Action">
        <item name="android:padding">12dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>
    <style name="AppTheme.Post.Container">
        <item name="android:background">?selectableItemBackground</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
    <style name="AppTheme.Post.Header">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>
    <style name="AppTheme.Post.Title">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:singleLine">false</item>
    </style>
    <style name="AppTheme.Post.Title.Light">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>
    <style name="AppTheme.Post.ByLine">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>
    <style name="AppTheme.Post.ByLine.Light">
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>
    <style name="AppTheme.Post.Score">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>
    <style name="AppTheme.Post.Score.Light">
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>
</resources>
